<style>
	#background {
		background-image: url("https://habitue-img.s3.sa-east-1.amazonaws.com/imagenes/1648827746.blob");
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		height: 100%;
		z-index: 10;
	}
	#img-burger {
		/* create a mask rounded to centre transparent */
		mask-image: radial-gradient(white 10%, transparent 50%);
	}
	img {
		filter: drop-shadow(0 0 1rem rgba(255, 255, 255, 0.5));
	}
	@media (max-width: 1150px) {
		section {
			flex-direction: column;
		}
		article {
			width: 100%;
		}
	}
</style>
