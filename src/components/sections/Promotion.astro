---
import { Image } from "astro:assets";
import hotdog from "../../img/hotdog.png";
import fries from "../../img/cheddarBacon.png";
const response = await fetch(
	"https://us-east4.gcp.data.mongodb-api.com/app/home-ybjtf/endpoint/210"
);
const data = await response.json();

console.log(data.productos_especiales[0].imagen);
---

<article class="flex flex-col md:flex-row max-h-full md:max-h-[50vh]">
	<aside class="flex justify-around items-center w-full">
		<div class="w-full md:max-w-1/2 text-center text-black p-10 md:p-20">
			<h3 class="text-3xl md:text-5xl font-bold uppercase pb-4">
				{data.productos_especiales[0].titulo}
			</h3>
			<p class="text-xl">
				{data.productos_especiales[0].subtitulo}
			</p>
		</div>
	</aside>
	<div class="w-full">
		<img
			class=""
			src={data.productos_especiales[0].imagen}
			alt="hotdog image"
		/>
	</div>
</article>
<article class="flex flex-col md:flex-row max-h-full md:max-h-[50vh]">
	<aside
		class="flex flex-col-reverse md:flex-row text-center items-center w-full overflow-hidden">
		<div class="w-full overflow-hidden">
			<img
				class=""
				src={data.productos_especiales[1].imagen}
				alt="fries image"
			/>
		</div>
		<div class="w-full p-10 md:p-20">
			<h3 class="text-3xl md:text-6xl font-semibold">
				{data.productos_especiales[1].titulo}
			</h3>
			<p class="text-2xl md:text-3xl">
				{data.productos_especiales[1].subtitulo}
			</p>
		</div>
	</aside>
</article>

<style>
	article {
		background-image: url("../img/blur.png");
		background-size: contain;
		background-repeat: repeat;
		background-position: center;
	}
	img {
		filter: drop-shadow(0px 0px 10px rgba(0, 0, 0, 0.5));
	}
	@media (max-width: 1150px) {
		section {
			flex-direction: column;
		}
		article {
			width: 100%;
		}
	}
</style>
