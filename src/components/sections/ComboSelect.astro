---
import { App } from "../ui/Swiper/App.jsx";
import Slider from "../ui/Slider.astro";

const response = await fetch(
	"https://us-east4.gcp.data.mongodb-api.com/app/home-ybjtf/endpoint/210"
);
const data = await response.json();
---

<section class="min-h-screen">
	<Slider text="productos" text2="especiales" />
	<App
		client:visible
		href1="#"
		img1={data.productos_especiales[0].imagen}
		title1={data.productos_especiales[0].titulo}
		description1={data.productos_especiales[0].subtitulo}
		href2="#"
		img2={data.productos_especiales[1].imagen}
		title2={data.productos_especiales[1].titulo}
		description2={data.productos_especiales[1].subtitulo}
		href3="#"
		img3={data.productos_especiales[0].imagen}
		title3={data.productos_especiales[0].titulo}
		description3={data.productos_especiales[0].subtitulo}
		href4="#"
		img4={data.productos_especiales[1].imagen}
		title4={data.productos_especiales[1].titulo}
		description4={data.productos_especiales[1].subtitulo}
	/>
</section>
