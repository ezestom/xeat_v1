---
import { App } from "../ui/Swiper/App.jsx";
import Slider from "../ui/Slider.astro";

const response = await fetch(
	"https://us-east4.gcp.data.mongodb-api.com/app/home-ybjtf/endpoint/210"
);
const data = await response.json();
---

<section class="h-full flex items-end justify-end">
	<App
		client:visible
		href1="#"
		img1={data.slider_categorias[0].imagen}
		title1={data.slider_categorias[0].nombre}
		description1={data.slider_categorias[0].descripcion}
		href2="#"
		img2={data.slider_categorias[1].imagen}
		title2={data.slider_categorias[1].nombre}
		description2={data.slider_categorias[1].descripcion}
		href3="#"
		img3={data.slider_categorias[2].imagen}
		title3={data.slider_categorias[2].nombre}
		description3={data.slider_categorias[2].descripcion}
		href4="#"
		img4={data.slider_categorias[0].imagen}
		title4={data.slider_categorias[0].nombre}
		description4={data.slider_categorias[0].descripcion}
	/>
</section>
