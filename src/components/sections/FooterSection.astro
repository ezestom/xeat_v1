---
import { Image } from "astro:assets";
import logo from "../../img/logo.png";
const response = await fetch(
	"https://us-east4.gcp.data.mongodb-api.com/app/home-ybjtf/endpoint/210"
);
const data = await response.json();
---

<section class="flex items-center bg-[--white3]">
	<p
		class="text-4xl my-2 md:text-7xl uppercase whitespace-nowrap font-black m-auto text-center w-full ">
		{data.nombre}
	</p>

	<article
		class="flex items-start md:items-center justify-evenly flex-col w-full p-5">
		<div
			class="flex flex-col md:flex-row items-start gap-5 md:gap-10 flex-wrap">
			<ul class="">
				<h3 class="uppercase text-3xl">real food</h3>
				<li class="md:py-3 hover:underline"><a href="#">Burgers</a></li>
				<li class="md:py-3 hover:underline">
					<a href="#">Fries&Cakes</a>
				</li>
				<li class="md:py-3 hover:underline">
					<a href="#">Hacer pedido</a>
				</li>
			</ul>

			<ul class="">
				<h3 class="uppercase text-3xl">contacto</h3>
				<li class="md:py-3 hover:underline">
					<a href="#">Invierte en Xeat</a>
				</li>
				<li class="md:py-3 hover:underline">
					<a href="#">real@xeatburgers.com</a>
				</li>
				<li class="md:py-3 hover:underline">
					<a href="#">orders@xeatburgers.com</a>
				</li>
			</ul>

			<ul class="">
				<h3 class="uppercase text-3xl">legal</h3>
				<li class="md:py-3 hover:underline">
					<a href="#">Política de privacidad</a>
				</li>
				<li class="md:py-3 hover:underline">
					<a href="#">Aviso Legal</a>
				</li>
				<li class="md:py-3 hover:underline">
					<a href="#">Política de cookies</a>
				</li>
			</ul>
		</div>
		<a target="_blank" href="#" class="hover:underline mt-5"
			>2024 © TBV - THE BURGER VILAS  </a
		>
	</article>
</section>

<style>
	@media (max-width: 1150px) {
		section {
			flex-direction: column;
		}
		article {
			width: 100%;
		}
	}
</style>
