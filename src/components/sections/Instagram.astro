---
const response = await fetch(
	"https://us-east4.gcp.data.mongodb-api.com/app/home-ybjtf/endpoint/210"
);
const data = await response.json();
---

<section class="flex justify-around items-center w-full relative">
	<article
		class="flex flex-col justify-center md:justify-start items-center text-center md:text-start md:items-start text-[--white3] md:p-32">
		<a
			target="_blank"
			href={`https://www.instagram.com/${data.redes_sociales[0].instagram.slice(1)}`}
			class="uppercase text-nowrap bg-[red] rounded-full hover:bg-red-600 hover:scale-110 transition px-4  mt-10 text-white py-2 md:py-4 border-2 border-black absolute bottom-2 md:left-48">
			{data.redes_sociales[0].instagram}
		</a>
	</article>
	<img
		src={data.logo_url}
		alt="crew logo"
		class="max-w-xl md:max-w-90 m-16 md:m-32 w-full"
	/>
</section>

<style>
	section {
		background-image: url("https://habitue-img.s3.sa-east-1.amazonaws.com/imagenes/1710534647.slider%20PC%20TBV.png");
		background-size: cover;
		background-position: center;
	}
	img {
		filter: drop-shadow(0 0 1em rgba(255, 255, 255, 0.25));
	}
	@media (max-width: 1150px) {
		section {
			flex-direction: column;
		}
		article {
			width: 100%;
		}
	}
</style>
