---
import { ViewTransitions } from "astro:transitions";
import "@fontsource-variable/onest";
interface Props {
	title: string;
}

const { title } = Astro.props;
import MobileNav from "../components/ui/MobileNav.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/iconTBV.png" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<MobileNav />
		<slot />
		<style is:global>
			:root {
				--white: #fff;
				--red: #e84242;
				--black: #000000;
				--black2: #00000073;
				/* background-image: url("../img/gggrain.svg"); */
				background-color: #ededed;
			}
			@font-face {
				font-family: "AvenirNext";
				src: url("../components/fonts/AvenirNext.ttc")
					format("truetype");
			}
			@font-face {
				font-family: "LeagueGothic";
				src: url("../components/fonts/LeagueGothic-Regular.ttf")
					format("truetype");
			}
			html {
				/* font-family: "Onest Variable", sans-serif; */
				font-family:
					"AvenirNext",
					sans-serif,
					system-ui,
					-apple-system,
					BlinkMacSystemFont,
					"Segoe UI",
					Roboto,
					Oxygen,
					Ubuntu,
					Cantarell,
					"Open Sans",
					"Helvetica Neue",
					sans-serif;
			}
		</style>
	</body>
</html>
